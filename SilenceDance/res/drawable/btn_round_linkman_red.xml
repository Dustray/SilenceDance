<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="oval">

            <solid android:color="#ff0000" />

            <stroke android:dashGap="0dp" android:width="1dp" android:color="#00df0000" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="oval">
            <solid android:color="#af0000" />

            <stroke android:dashGap="0dp" android:width="1dp" android:color="#00ff0000" />
        </shape></item>

</selector>