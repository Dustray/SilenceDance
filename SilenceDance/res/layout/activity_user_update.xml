<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".UserUpdateActivity" >

    <include
        android:id="@+id/top_bar_include"
        layout="@layout/top_bar" />
    <TextView
        android:id="@+id/tvAccomplish"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/top_bar_include"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="45dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="设置头像"
                android:textColor="#000000"
                android:textSize="20sp" />

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rivUpdateHead"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/test_photo"
                app:riv_corner_radius="10dip"
                app:riv_mutate_background="true"
                app:riv_oval="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#4c4c4c" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="昵称"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etUpdateName"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_input"
                android:hint="请输入用户昵称"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#4c4c4c" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="性别"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvUpdateSex"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="用户性别"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#4c4c4c" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="职业"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etUpdateWork"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_input"
                android:hint="请输入用户职业"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#4c4c4c" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="生日"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvUpdateBirthday"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="用户生日"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#4c4c4c" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="住址"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etUpdateAddress"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_input"
                android:hint="请输入用户住址"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#4c4c4c" >
        </View>
    </LinearLayout>

</RelativeLayout>