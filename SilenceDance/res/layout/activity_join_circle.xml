<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".JoinCircleActivity" >

    <include
        android:id="@+id/top_bar_include"
        layout="@layout/top_bar" />

    <TextView
        android:id="@+id/circleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="舞圈名"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/content_Text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar_include"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:text="舞  圈  号:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size" >
            </TextView>

            <TextView
                android:id="@+id/circleID"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:text="舞圈描述:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size" >
            </TextView>

            <TextView
                android:id="@+id/circleDescription"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:text="舞圈领队:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size" >
            </TextView>

            <TextView
                android:id="@+id/circleOwner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:text="成  员  数:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size" >
            </TextView>

            <TextView
                android:id="@+id/circleMembers"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size" >
            </TextView>
        </LinearLayout>

        <EditText
            android:id="@+id/joinReason"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_input"
            android:ems="10"
            android:hint="加入理由" />

        <Button
            android:id="@+id/join_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_long_red"
            android:onClick="joinCircle"
            android:text="申请加入"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>